<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="entity_parsing_bundle.command.all_command" class="EntityParsingBundle\Command\AllCommand">
            <tag name="console.command" command="parsing:all"/>
            <argument key="$entity_directories">%entity_parsing_bundle.entity_directories%</argument>
        </service>
        <service id="entity_parsing_bundle.command.one_command" class="EntityParsingBundle\Command\OneCommand">
            <tag name="console.command" command="parsing:one"/>
            <argument type="service" id="service_container" />
        </service>
    </services>

</container>
